<header>
        <nav id="navBar">
            <button class="navBtns" id="homeBtn">HOME</button>
            <button class="navBtns" id="dashBtn">DASHBOARD</button>
            <button class="navBtns" id="logOutBtn">LOGOUT</button>
        </nav>
        <h1>The Tech Blog!</h1>
        {{log post.[0].user 'dashbroard!!!!!!!!!!'}}
        <h4><span id="userName">{{post.[0].user.name}}'s </span>page of really important opinions</h4>
    </header>
<main id="postContainer">
    <form id="createPostForm">
        <h5>please share with us how you really feel</h5>
        <label for="postTitle">Title</label>
        <input id="postTitle" type="text">
        <textarea id="postContent" cols="30" rows="10" placeholder="i am sooooo great and here is why..."></textarea>
        <button id="postSubBtn">Submit</button>
    </form>
    <div id="cardContainer">
        {{#each post as |post|}}
        <section class="card" data-post_id={{post.id}}>
            <div class="cardHeader">
                <h3 class="cardTitle">{{post.title}}</h3>
            </div>
            <div class="postContent">
                <p>{{post.main_text}}</p>
            </div>
            <div class="comments">
                {{#if post.comments}}
                {{#each post.comments as |comments|}}
                    <div class="commentWrap">
                        <p class='commentAuthor'>{{post.user.name}}</p>
                        <p class='commentText'>{{comments.comment_main_text}}</p>
                    </div>
                {{/each}}
                {{/if}}
            </div>
            <div class="addComment">
                <textarea class="commentMain" cols="5" rows="2" placeholder="comment" data-post_id={{post.id}}></textarea>
                <button class="addCommentBtn" data-post_id={{post.id}}>add</button>
            </div>
        </section>
        {{/each}}
    </div>
</main>

<script src="./js/home.js"></script>
